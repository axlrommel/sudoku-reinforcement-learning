{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "module": "commonjs",
    "target": "es2017",
    "outDir": "./out",
    "lib": [
      "es2017",
      "esnext.asynciterable",
      "dom"
    ],
    "sourceMap": true,
    "rootDir": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ]
}